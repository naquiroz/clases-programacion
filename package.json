{
  "name": "clases-programacion",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm dlx playwright install chromium; pnpm build-index; for clase in clase_*.md; do slidev build ${clase%%.*}.md --base /${clase%%.*}/ --out dist/${clase%%.*}; done",
    "build-index": "slidev build index.md --base / --out dist",
    "dev": "slidev",
    "present": "echo Password;read passwd; slidev --remote=$passwd",
    "export": "slidev export --executable-path /tmp/chromium"
  },
  "dependencies": {
    "@slidev/cli": "^51.8.2",
    "@slidev/theme-apple-basic": "^0.25.1",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "@sparticuz/chromium": "^137.0.1",
    "@vercel/analytics": "^1.5.0",
    "playwright-core": "^1.53.0",
    "slidev-addon-python-runner": "^0.1.3",
    "vue": "^3.5.16"
  },
  "packageManager": "pnpm@10.6.5+sha512.cdf928fca20832cd59ec53826492b7dc25dc524d4370b6b4adbf65803d32efaa6c1c88147c0ae4e8d579a6c9eec715757b50d4fa35eea179d868eada4ed043af"
}
